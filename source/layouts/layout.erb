<!doctype html>
<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title><%= current_page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="<%= image_host %>/images/logo.png">
    <link rel="shortcut icon" type="image/png" href="<%= image_host %>/images/logo.png">

    <link href="https://fonts.googleapis.com/css?family=Exo:300,400,400i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,400i,700" rel="stylesheet">
    <% if about? %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
      integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
      crossorigin=""/>
    <% end %>
    <%= stylesheet_link_tag :styles %>
    <%# javascript_include_tag :scripts %>

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <!-- https://cards-dev.twitter.com/validator -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:creator" content="<%= author_twitter %>">
    <meta name="twitter:url" property="og:url" content="<%= current_page.url %>">
    <meta name="twitter:title" property="og:title" content="<%= current_page_title %>">
    <meta name="twitter:description" property="og:description" content="by <%= author_name %>">
    <meta name="twitter:image" property="og:image" content="<%= featured_image(current_page) %>">
    <meta name="twitter:image:alt" property="og:image" content="Content by <%= author_name %>">
  </head>

  <body class="<%= page_classes %>">

    <header>
      <nav>
        <ul role="menu" class="site-navigation">
          <li class="site-navigation-home"><a href="/"><svg aria-hidden="true" class="icon-home"><use href="/images/symbol-defs.svg#icon-home"></use></svg>Home</a></li>
          <li class="site-navigation-work"><a href="/work"><svg aria-hidden="true" class="icon-work"><use href="/images/symbol-defs.svg#icon-work"></use></svg>Work</a></li>
          <li class="site-navigation-blog"><a href="/blog"><svg aria-hidden="true" class="icon-blog"><use href="/images/symbol-defs.svg#icon-blog"></use></svg>Blog</a></li>
          <li class="site-navigation-about"><a href="/about"><svg aria-hidden="true" class="icon-about"><use href="/images/symbol-defs.svg#icon-about"></use></svg>About</a></li>
        </ul>
      </nav>
    </header>

    <div class="site-main" role="main">
      <%= yield %>
    </div>

    <footer class="site-footer wrapper diagonal-top">
      <p>Built with Middleman</p>
      <p>Hosted by GitLab</p>

      <ul class="footer-navigation">
        <li class="footer-navigation-item"><a href="/work/">Work</a></li>
        <li class="footer-navigation-item"><a href="/blog/">Blog</a></li>
        <li class="footer-navigation-logo"><a href="/"><img src="<%= image_host %>/images/logo.png" width="50" height="50" alt="site logo"></a></li>
        <li class="footer-navigation-item"><a href="/about/">About</a></li>
        <li class="footer-navigation-item"><a href="/reach/">Reach</a></li>
      </ul>
    </footer>

    <% if build? %>
    <!-- Default Statcounter code for Octopus in vitro https://octopusinvitro.tk -->
    <script type="text/javascript">
    var sc_project=10515243;
    var sc_invisible=1;
    var sc_security="81c44b24";
    </script>

    <script type="text/javascript" src="https://www.statcounter.com/counter/counter.js" async></script>

    <noscript>
      <div class="statcounter">
        <a title="Web Analytics Made Easy - StatCounter" href="http://statcounter.com/" target="_blank">
          <img class="statcounter" src="//c.statcounter.com/10515243/0/81c44b24/1/" alt="Web Analytics Made Easy - StatCounter">
        </a>
      </div>
    </noscript>
    <!-- End of Statcounter Code -->
    <% end %>

    <script defer src="/javascripts/vendor/svgxuse.js"></script>

    <% if current_page.data.mathjax %>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    <% end %>
  </body>
</html>
