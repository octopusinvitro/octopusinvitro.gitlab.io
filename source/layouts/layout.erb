<!doctype html>
<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title><%= current_page_title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="/images/logo.png">
    <link rel="shortcut icon" type="image/png" href="/images/logo.png">

    <link href="https://fonts.googleapis.com/css?family=Exo:300,400,400i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,400i,700" rel="stylesheet">

    <%= stylesheet_link_tag :styles %>
    <%= javascript_include_tag :scripts %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <!-- https://cards-dev.twitter.com/validator -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:creator" content="<%= author_twitter %>">
    <meta name="twitter:url" property="og:url" content="<%= current_page.url %>">
    <meta name="twitter:title" property="og:title" content="<%= current_page_title %>">
    <meta name="twitter:description" property="og:description" content="by <%= author_name %>">
    <meta name="twitter:image" property="og:image" content="<%= featured_image(current_page) %>">
    <meta name="twitter:image:alt" property="og:image" content="Content by <%= author_name %>">
  </head>

  <body class="<%= page_classes %>">
    <!--[if lt IE 8]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <header>
      <nav>
        <ul role="menu" class="site-navigation">
          <li class="site-navigation-home"><a href="/"><svg aria-hidden="true" class="icon-speak"><use xlink:href="/images/symbol-defs.svg#icon-speak"></use></svg>Home</a></li>
          <li class="site-navigation-work"><a href="/work"><svg aria-hidden="true" class="icon-work"><use xlink:href="/images/symbol-defs.svg#icon-work"></use></svg>Work</a></li>
          <li class="site-navigation-blog"><a href="/blog"><svg aria-hidden="true" class="icon-write"><use xlink:href="/images/symbol-defs.svg#icon-write"></use></svg>Blog</a></li>
          <li class="site-navigation-about"><a href="/about"><svg aria-hidden="true" class="icon-about"><use xlink:href="/images/symbol-defs.svg#icon-about"></use></svg>About</a></li>
        </ul>
      </nav>
    </header>

    <div class="site-main" role="main">
      <%= yield %>
    </div>

    <footer class="site-footer wrapper diagonal-top">
      <p>Built with Middleman</p>
      <p>Hosted by GitLab</p>

      <ul class="footer-navigation">
        <li class="footer-navigation-item"><a href="/work/">Work</a></li>
        <li class="footer-navigation-item"><a href="/blog/">Blog</a></li>
        <li class="footer-navigation-logo"><a href="/"><img src="/images/logo.png" width="50" height="50" alt="site logo"></a></li>
        <li class="footer-navigation-item"><a href="/about/">About</a></li>
        <li class="footer-navigation-item"><a href="/reach/">Reach</a></li>
      </ul>
    </footer>

    <% if build? %>
    <%= partial "stats" %>
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <% end %>

    <script>window.jQuery || document.write('<script src="javascript/jquery-2.1.4.min.js"><\/script>')</script>
    <script defer src="/javascripts/svgxuse.js"></script>

  </body>
</html>
